<?php if(!empty($this->pages)): ?>
<ul class="main_menu">
    <?php $i = 1; ?>
    <?php foreach ($this->pages as $key => $page): ?>
        <li class="category cat-<?php echo $i++; ?>">
            <?php if($page['external_link_status'] === '1'):?>
                <?php $pageCategoryUrl = $page['external_link'];?>
                <?php $targetBlank = 'target="_blank"';?>
            <?php else:?>
                <?php $targetBlank = '';?>
                <?php if($page['url'] == 'index.html') {
                    $page['url'] = '';
                }?>
                <?php $pageCategoryUrl = $this->websiteUrl . $page['url'];?>
            <?php endif;?>
            <a title="<?php echo $page['h1']; ?>" href="<?php echo $pageCategoryUrl ?>" <?php echo $targetBlank;?>><?php echo $page['navName'] ; ?></a>
            <?php if(isset($page['subPages']) && !empty($page['subPages']) ): ?>
                <ul class="<?php echo str_replace('.html', '', $page['url']); ?>">
                    <?php foreach($page['subPages'] as $subPage): ?>
                        <?php if($subPage['external_link_status'] === '1'):?>
                            <?php $subPageUrl = $subPage['external_link'];?>
                            <?php $targetBlank = 'target="_blank"';?>
                        <?php else:?>
                            <?php $targetBlank = '';?>
                            <?php if($subPage['url'] == 'index.html') {
                                $subPage['url'] = '';
                            }?>
                            <?php $subPageUrl = $this->websiteUrl . $subPage['url'];?>
                        <?php endif;?>
                        <li class="page"><a title="<?php echo $subPage['h1']; ?>" <?php echo $targetBlank;?> href="<?php echo $subPageUrl;?>"><?php echo $subPage['navName']; ?></a></li>
                    <?php endforeach; ?>
                </ul>
            <?php endif; ?>
        </li>
    <?php endforeach; ?>
</ul>
<?php endif; ?>